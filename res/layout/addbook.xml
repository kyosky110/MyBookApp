<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="添加图书"
        android:gravity="center"
        />
	<EditText 
	    android:id="@+id/addbook_title"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="书的题目"
        />
	<EditText 
	    android:id="@+id/addbook_author"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="书的作者"
        />
	<EditText 
	    android:id="@+id/addbook_content"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:hint="书的内容"
        />
	<EditText 
	    android:id="@+id/addbook_pnum"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="联系电话"
        android:inputType="phone"
        />
	<ImageView
        android:id="@+id/addbook_photo"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:background="@drawable/addpic" />
	<TextView 
	    android:id="@+id/addbook_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="选择图书类型"
        android:gravity="center"
        />
	<Spinner 
	    android:id="@+id/addbook_classify"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_marginLeft="12dp"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="60dp"
	    android:layout_marginTop="30dp"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/addbook_ok"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:onClick="onClick"
	        />
	    <Button 
	        android:id="@+id/addbook_quit"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        android:onClick="onClick"
	        />
	</LinearLayout>
</LinearLayout>
